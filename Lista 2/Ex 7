using System;

class Program {
  public static void Main (string[] args) {
    //declarando as variaveis
    double x, pot2 = 0, pot3 = 0;

    Console.WriteLine("Digite o valor de x: ");
    x = double.Parse(Console.ReadLine());
    //Variavel para armazenar o valor de x^2
    pot2 = Math.Pow(x,2);
    //Variavel para armazenar o valor de x^3
    pot3 = Math.Pow(x,3);

    //Entrando nas condições 
    if(x <=1)
      Console.WriteLine("O valor de y é: 1");
    else if(x > 1 && x <= 2 )
      Console.WriteLine("O valor de y é: 2");
    else if(x > 2 && x <= 3)
      Console.WriteLine("O valor de y é: " + pot2);
    else
      Console.WriteLine("O valor de y é: " + pot3);
  }
}
